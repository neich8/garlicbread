<!DOCTYPE html>
<html>
  <head>
    <title>Message Bored</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% include nav.ejs %>
    <div id="wrapper">
      <div id="content">
    	<form action="/post" method="post">
    		 Title:
        <br><input type="string" name="title"  placeholder="Title"> <br><br>
        Message:<br>
        <textarea rows="10" cols="30" name="content"></textarea>
        <br><br><input type="submit" name="Post!">
        <h1>Posts</h1>

        <ul>
          <% for(var i=0; i<messageboard.length; i++) {%>

            <li><%= messageboard[i].title %></li>
            <li><%= messageboard[i].post %></li>
            <li><form action="/delete/<%= messageboard[i]._id %>" method="post">
              <button type="submit">Delete</button>
              </form></li>
              <li><a href="/edit/<%= messageboard[i]._id %>">Edit DONT FORGET THE IF STATEMENT!!!!</a></li>
          <% } %>
        </ul>
      </div>
    </div>


  </body>
</html>
